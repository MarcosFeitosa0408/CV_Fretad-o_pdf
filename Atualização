# Regenerate the PDF with fully qualified clickable links (https://)

from reportlab.platypus import SimpleDocTemplate, Paragraph, Spacer, ListFlowable, ListItem
from reportlab.lib.styles import getSampleStyleSheet, ParagraphStyle
from reportlab.lib.pagesizes import A4
from reportlab.lib.units import cm

file_path = "/mnt/data/Marcos_Feitosa_Curriculo_Fretadao_Links_OK.pdf"

doc = SimpleDocTemplate(
    file_path,
    pagesize=A4,
    rightMargin=2*cm,
    leftMargin=2*cm,
    topMargin=2*cm,
    bottomMargin=2*cm
)

styles = getSampleStyleSheet()
styles.add(ParagraphStyle(name="TitleStyle", fontSize=16, leading=20, spaceAfter=12, alignment=1))
styles.add(ParagraphStyle(name="SectionStyle", fontSize=12, leading=14, spaceBefore=14, spaceAfter=6, bold=True))
styles.add(ParagraphStyle(name="BodyStyle", fontSize=10, leading=14))

content = []

content.append(Paragraph("<b>MARCOS ANTÔNIO FEITOSA</b>", styles["TitleStyle"]))
content.append(Paragraph(
    'Telefone: (11) 95224-7141 | Email: marcosfeitosa.analista@gmail.com<br/>'
    '<a href="https://www.linkedin.com/in/marcosfeitosa-analista">LinkedIn: linkedin.com/in/marcosfeitosa-analista</a><br/>'
    '<a href="https://cosmicdata-reywmdpy.manus.space">Portfólio: cosmicdata-reywmdpy.manus.space</a> | '
    '<a href="https://github.com/MarcosFeitosa0408">GitHub: github.com/MarcosFeitosa0408</a>',
    styles["BodyStyle"]
))

content.append(Paragraph("Perfil Profissional", styles["SectionStyle"]))
content.append(Paragraph(
    "Analista de Dados em desenvolvimento, formado em Análise e Desenvolvimento de Sistemas e cursando MBA em "
    "Data Analytics, BI e Big Data. Experiência prática com Excel Avançado, SQL, Power BI e Python, atuando na "
    "transformação de dados em insights e construção de dashboards para suporte à tomada de decisão. Após 15 anos "
    "de experiência em logística, desenvolvi forte disciplina, organização e pensamento analítico. Busco estágio "
    "em Produtos com foco em Dados no Fretadão.",
    styles["BodyStyle"]
))

content.append(Paragraph("Competências Técnicas", styles["SectionStyle"]))
skills = [
    "Excel Avançado – Power Query, dashboards e fórmulas avançadas",
    "SQL Server – consultas, joins, CTEs e extração de dados",
    "Power BI – DAX, modelagem de dados e indicadores (KPIs)",
    "Python – Pandas e ETL básico",
    "GitHub – versionamento e organização de projetos",
    "Inteligência Artificial e automação – uso de ferramentas modernas"
]
content.append(ListFlowable(
    [ListItem(Paragraph(skill, styles["BodyStyle"])) for skill in skills],
    bulletType="bullet"
))

content.append(Paragraph("Projetos", styles["SectionStyle"]))
projects = [
    "Dashboard LogRoute Analytics – KPIs aplicados à logística",
    "Dashboard NerdCell – análise de desempenho de lojas",
    "Relatório Contoso – storytelling com dados e DAX",
    "Canal no YouTube – conteúdos educacionais sobre SQL e BI"
]
content.append(ListFlowable(
    [ListItem(Paragraph(project, styles["BodyStyle"])) for project in projects],
    bulletType="bullet"
))

content.append(Paragraph("Formação Acadêmica", styles["SectionStyle"]))
content.append(Paragraph(
    "MBA em Data Analytics, BI & Big Data (Cursando) – Cruzeiro do Sul / UNICID<br/>"
    "Tecnólogo em Análise e Desenvolvimento de Sistemas – UNICID",
    styles["BodyStyle"]
))

content.append(Paragraph("Experiência", styles["SectionStyle"]))
experience = [
    "Logística – 15 anos de atuação com gestão de prazos e performance operacional",
    "Freelancer – desenvolvimento de dashboards, ETL simples e consultorias em dados"
]
content.append(ListFlowable(
    [ListItem(Paragraph(exp, styles["BodyStyle"])) for exp in experience],
    bulletType="bullet"
))

content.append(Paragraph("Objetivo", styles["SectionStyle"]))
content.append(Paragraph(
    "Estágio em Produtos com foco em Dados – Fretadão.",
    styles["BodyStyle"]
))

content.append(Paragraph("Carta de Apresentação", styles["SectionStyle"]))
content.append(Paragraph(
    "Senhor(a) Recrutador(a),<br/><br/>"
    "Com entusiasmo, me candidato ao Estágio em Produtos com foco em Dados no Fretadão. "
    "Possuo experiência prática com SQL, Excel Avançado, Power BI e análise de dados, desenvolvida por meio de "
    "projetos reais e formação contínua. Tenho grande interesse em compreender profundamente produtos digitais, "
    "mensurar resultados, identificar oportunidades e apoiar decisões estratégicas por meio de dados.<br/><br/>"
    "Acredito que minha vivência em logística por mais de 15 anos, aliada à minha formação em tecnologia e dados, "
    "me permite contribuir com visão analítica, disciplina e clareza na comunicação dos resultados. "
    "Permaneço à disposição para entrevista.<br/><br/>"
    "Atenciosamente,<br/>"
    "Marcos Antônio Feitosa",
    styles["BodyStyle"]
))

doc.build(content)

file_path
